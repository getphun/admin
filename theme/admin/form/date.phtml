<div class="form-group<?= ($error?' has-error':'') ?>">
    <?php if(!isset($nolabel) || !$nolabel): ?>
    <label for="<?= $id ?>"><?= $label ?></label>
    <?php endif; ?>
    
    <?php
        // Due to Google Chrome and Opera has build-in date/datetime selector
        // which is hard to configure, we've to use default 'text' input type
        // to suppress the 'feature'.
        // Thank you Google Chrome and Opera for your hard-work.
        $el_attrs = [
            'type'  => 'text',
            'data-type' => $type,
            'id'    => $id,
            'name'  => $name,
            'placeholder' => $label,
            'class' => 'form-control form-date'
        ];
        
        if($value)
            $el_attrs['value'] = $value;
        
        // required
        if(isset($rules['required']))
            $el_attrs['required'] = 'required';
        
        $helper = $error ? $error : $desc;
        if($helper)
            $el_attrs['aria-describedby'] = $id . '-help-block';
    ?>
    
    <div class="input-group date">
        <input <?= array_to_attr($el_attrs); ?>>
        <span class="input-group-addon">
            <i class="fa fa-calendar"></i>
        </span>
    </div>
    
    <?php if($helper): ?>
    <span id="<?= $id ?>-help-block" class="help-block"><?= $helper ?></span>
    <?php endif; ?>
</div>